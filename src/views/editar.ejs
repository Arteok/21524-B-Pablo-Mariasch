<main>
    <div class="formulario">
        <h1>Editar Publicación</h1>
        <div class="panel">
            <form action="/posts/<%= post.id %>" id="post-form" method="post">

                <div class="mb-3 mt-1">
                    <label for="post-title" class="form-label">Título:</label>
                    <input type="text" name="titulo" class="form-control" placeholder="@title"
                        value="<%= post.titulo %>" required>
                </div>

                <div class="mb-3">
                    <label for="post-content" class="form-label">Contenido:</label>
                    <textarea class="form-control" name="contenido" id="" cols="30" rows="10"
                        required><%= post.contenido %></textarea>
                </div>
                
                <div class="mb-3">
                    <label for="image-url" class="form-label">URL de la imagen:</label>
                    <input class="form-control" type="url" name="linkImg" id="" value="<%= post.linkImg %>">
                </div>

                <div class="text-center mb-3">
                    <button class="btn btn-warning text-center ">Editar Publicación</button>
                </div>
            </form>
        </div>
    </div>
</main>

